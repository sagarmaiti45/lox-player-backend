<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Details - Lox Player Admin</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <%- include('partials/header', { adminName, activePage: 'users' }) %>

  <div class="container">
    <div class="breadcrumb">
      <a href="/admin/users">Users</a> / <%= user.email %>
    </div>

    <h1>User Details</h1>

    <div class="user-info-card">
      <div class="info-row">
        <span class="info-label">Email:</span>
        <span class="info-value"><%= user.email %></span>
      </div>
      <div class="info-row">
        <span class="info-label">Full Name:</span>
        <span class="info-value"><%= user.full_name || 'Not provided' %></span>
      </div>
      <div class="info-row">
        <span class="info-label">Status:</span>
        <span class="info-value">
          <% if (user.email_verified_at) { %>
            <span class="badge badge-success">Verified</span>
          <% } else { %>
            <span class="badge badge-warning">Unverified</span>
          <% } %>
        </span>
      </div>
      <div class="info-row">
        <span class="info-label">Joined:</span>
        <span class="info-value"><%= new Date(user.created_at).toLocaleString() %></span>
      </div>
      <div class="info-row">
        <span class="info-label">Last Login:</span>
        <span class="info-value"><%= user.last_login_at ? new Date(user.last_login_at).toLocaleString() : 'Never' %></span>
      </div>
    </div>

    <div class="stats-grid" style="margin: 30px 0;">
      <div class="stat-card">
        <div class="stat-icon">üìÅ</div>
        <div class="stat-content">
          <div class="stat-value"><%= storage.file_count %></div>
          <div class="stat-label">Files</div>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-icon">üíæ</div>
        <div class="stat-content">
          <div class="stat-value"><%= (storage.total_size / (1024 * 1024)).toFixed(2) %> MB</div>
          <div class="stat-label">Storage Used</div>
        </div>
      </div>
    </div>

    <div class="section">
      <h2>Recent Files</h2>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>File Name</th>
              <th>Type</th>
              <th>Size</th>
              <th>Uploaded</th>
            </tr>
          </thead>
          <tbody>
            <% if (files.length > 0) { %>
              <% files.forEach(file => { %>
                <tr>
                  <td><%= file.file_name %></td>
                  <td><%= file.mime_type || '-' %></td>
                  <td><%= (file.file_size / 1024).toFixed(2) %> KB</td>
                  <td><%= new Date(file.created_at).toLocaleDateString() %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" style="text-align: center; padding: 40px; color: #6b7280;">
                  No files uploaded yet
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div style="margin-top: 30px;">
      <a href="/admin/users" class="btn-secondary">Back to Users</a>
      <form method="POST" action="/admin/users/<%= user.id %>/delete" style="display: inline; margin-left: 10px;" onsubmit="return confirm('Are you sure you want to delete this user and all their files?');">
        <button type="submit" class="btn-danger">Delete User</button>
      </form>
    </div>
  </div>
</body>
</html>
